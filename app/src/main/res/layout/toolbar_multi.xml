<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_multi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/multi_delete"
                android:layout_width="@dimen/d56_size"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="?attr/background_rect_ripple"
                android:src="@drawable/btn_tip_delete" />

            <ImageButton
                android:id="@+id/multi_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d6_size"
                android:background="@color/transparent"
                android:src="@drawable/btn_tip_close" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/multi_playlist"
                android:layout_width="@dimen/d56_size"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="?attr/background_rect_ripple"
                android:src="@drawable/btn_tip_playlist" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/multi_playqueue"
                android:layout_width="@dimen/d56_size"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="?attr/background_rect_ripple"
                android:src="@drawable/btn_tip_playqueue" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/multi_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:alpha="50"
        android:background="?attr/background_color_main"
        android:visibility="gone" />

</RelativeLayout>