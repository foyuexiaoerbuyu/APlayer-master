<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d56_size"
    android:background="?attr/background_list"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/folder_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d15_size"
        android:src="@drawable/icon_folder" />

    <ImageButton
        android:id="@+id/folder_button"
        android:layout_width="@dimen/item_list_btn_size"
        android:layout_height="@dimen/item_list_btn_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/background_oval_ripple" />

    <TextView
        android:id="@+id/folder_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d18_size"
        android:layout_marginRight="@dimen/d18_size"
        android:layout_marginBottom="@dimen/d22_size"
        android:layout_toLeftOf="@id/folder_button"
        android:textColor="?attr/text_color_secondary"
        android:textSize="@dimen/s12_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/folder_num"
        android:layout_toRightOf="@id/folder_image"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s12_size" />

        <TextView
            android:id="@+id/folder_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s10_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1_size"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/d15_size"
        android:background="?attr/divider_color" />
</RelativeLayout>